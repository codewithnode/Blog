<%- include('./partials/head_layout') %>
    <div>
        <h1>Articles</h1>
        <a class='btn btn-primary' type="submit" href="articles/new">New Article </a>
        <% articles.forEach(article=> { %>

            <div class="card mt-2" style="width: 25rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= article.title %>
                    </h5>
                    <h5 class="card-title">
                        <%= article.author %>
                    </h5>
                    <p class="card-text">
                        <%= article.content %>
                    </p>
                    <a href="articles/show/<%=article._id%>" class="btn btn-primary">Read More</a>
                    <a href="articles/edit/<%= article._id%>" class="btn btn-warning">Edit</a>
                    <a href="articles/delete/<%= article._id%>" class="btn btn-danger">Delete Post</a>
                </div>

            </div>

            <% }) %>
                <%- include('./partials/tail_layout') %>
    </div>